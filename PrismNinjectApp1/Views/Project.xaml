<Page x:Class="PrismNinjectApp1.ViewModels.Project"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PrismNinjectApp1.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Project">

    <Grid Background="WhiteSmoke">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Focus" Width="100" TextAlignment="Center"></TextBlock>
            <TextBox x:Name="FocusTextBox" Width="100" ></TextBox>
            
            <TextBlock Text="Cryterias" Width="100" TextAlignment="Center"></TextBlock>
            <TextBox x:Name="CryteriasTextBox" Width="100"></TextBox>
            
            <TextBlock Text="Alternative" Width="100" TextAlignment="Center"></TextBlock>
            <TextBox x:Name="AlternativeTextBox" Width="100"></TextBox>
        </StackPanel>
        
    </Grid>
</Page>
